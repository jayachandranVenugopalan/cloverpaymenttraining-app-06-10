<!--                android:textColor="#ffff"/>-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="350dp"-->
<!--                android:background="#008577"-->
<!--                android:text="Invoice No:-"-->
<!--                android:textColor="#ffff"-->
<!--                android:textSize="18dp" />-->
